<div class="page-header">
  <h1>
    Items
    <a href="/items/new" class="btn btn-lg btn-success">New Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Product</th>
        <th>Product category</th>
        <th>Origin</th>
        <th>Format</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.product %></td>
        <td><%= item.product_category %></td>
        <td><%= item.origin %></td>
        <td><%= item.format %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.image %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn btn-primary">Show</a>
          <a href="/items/<%= item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
