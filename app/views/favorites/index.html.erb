<div class="page-header">
  <h1>
  Shopping List
    <a href="/favorites/new" class="btn btn-lg btn-success">New Item on List</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Product</th>
        <th>Amount requested</th>
        <th>Actions</th>
      </tr>

      <% @favorites.each do |favorite| %>
        <%if current_user.id == favorite.user_id%>
      <tr>
        <td>
          <%= Movie.find(favorite.item_id).product %>
        </td>
        <td><%= favorite.amount_requested %></td>


        <td>
          <a href="/favorites/<%= favorite.id %>" class="btn btn-primary">Show</a>
          <a href="/favorites/<%= favorite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
